<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Arial', sans-serif;
        /* background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); */
        min-height: 100vh;
        /* padding: 20px; */
    }

    .totalContent {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .slideContainer {
        width: 75vw;
        max-width: 1200px;
        height: 70vh;
        margin: 0 auto;
        overflow: hidden;
        position: relative;
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        background: white;
    }

    .slides {
        display: flex;
        width: calc(100% * 4);
        height: 100%;
        transition: transform 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .slide {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 40px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .slide::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        opacity: 0.1;
        z-index: 1;
    }

    .slide-content {
        position: relative;
        z-index: 2;
        max-width: 800px;
    }

    .slide h1 {
        font-size: 3.5em;
        margin-bottom: 30px;
        color: #2c3e50;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        animation: slideInFromTop 1s ease-out;
    }

    .slide h2 {
        font-size: 2.5em;
        margin-bottom: 25px;
        color: #e74c3c;
        animation: slideInFromLeft 1s ease-out 0.3s both;
    }

    .slide p {
        font-size: 1.4em;
        line-height: 1.8;
        color: #34495e;
        margin-bottom: 20px;
        animation: fadeInUp 1s ease-out 0.6s both;
    }

    .slide ul {
        text-align: left;
        font-size: 1.3em;
        color: #34495e;
        animation: fadeInUp 1s ease-out 0.8s both;
    }

    .slide li {
        margin-bottom: 15px;
        padding-left: 20px;
        position: relative;
    }

    .slide li::before {
        content: '💧';
        position: absolute;
        left: 0;
        font-size: 1.2em;
    }

    .slide img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    /* Slide-specific backgrounds */
    .slide1 {
        background: linear-gradient(135deg, #74b9ff, #0984e3);
        color: white;
    }

    .slide1 h1,
    .slide1 h2,
    .slide1 p {
        color: white;
    }

    .slide2 {
        background: linear-gradient(135deg, #fd79a8, #e84393);
        color: white;
    }

    .slide3 {
        background: linear-gradient(135deg, #fdcb6e, #e17055);
    }

    .slide4 {
        background: linear-gradient(135deg, #6c5ce7, #a29bfe);
        color: white;
    }

    /* Navigation buttons */
    .navBtn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(255, 255, 255, 0.9);
        color: #2c3e50;
        border: none;
        padding: 15px 20px;
        cursor: pointer;
        font-size: 24px;
        border-radius: 50px;
        z-index: 10;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .navBtn:hover {
        background: white;
        transform: translateY(-50%) scale(1.1);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
    }

    .prev {
        left: 20px;
    }

    .next {
        right: 20px;
    }

    /* Progress indicator */
    .progress {
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 10px;
        z-index: 10;
    }

    .progress-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.5);
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .progress-dot.active {
        background: white;
        transform: scale(1.3);
    }

    /* Animations */
    @keyframes slideInFromTop {
        from {
            opacity: 0;
            transform: translateY(-50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes slideInFromLeft {
        from {
            opacity: 0;
            transform: translateX(-50px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Water drop animation */
    .water-drop {
        position: absolute;
        width: 20px;
        height: 20px;
        background: rgba(255, 255, 255, 0.3);
        border-radius: 50% 50% 50% 0;
        transform: rotate(45deg);
        animation: fall 3s infinite linear;
    }

    @keyframes fall {
        0% {
            top: -20px;
            opacity: 1;
        }

        100% {
            top: 100%;
            opacity: 0;
        }
    }

    /* Single content container styles */
    .content-section {
        max-width: 1200px;
        margin: 60px auto;
        padding: 50px;
        position: relative;
        background: linear-gradient(145deg, #ffffff, #f8f9fa);
        border-radius: 30px;
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        z-index: 1;
    }

    .content-section h2 {
        font-size: 2.5em;
        color: #2c3e50;
        margin-bottom: 30px;
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 15px;
    }

    .content-section h3 {
        font-size: 1.8em;
        color: #3498db;
        margin: 30px 0 15px 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .content-section p {
        font-size: 1.2em;
        line-height: 1.8;
        color: #34495e;
        margin-bottom: 20px;
        text-align: justify;
    }

    .highlight {
        background: linear-gradient(120deg, #a8e6cf 0%, #88d8c0 100%);
        padding: 3px 8px;
        border-radius: 5px;
        font-weight: bold;
        color: #2c3e50;
    }

    /* Animated water drops */
    .animated-water-drop {
        position: absolute;
        width: 25px;
        height: 25px;
        background: linear-gradient(135deg, #3498db, #74b9ff);
        border-radius: 50% 50% 50% 0;
        transform: rotate(137deg);
        animation: waterFall 8s infinite linear;
        opacity: 0.6;
    }

    .animated-water-drop:nth-child(2n) {
        animation-delay: -2s;
        background: linear-gradient(135deg, #74b9ff, #0984e3);
    }

    .animated-water-drop:nth-child(3n) {
        animation-delay: -4s;
        background: linear-gradient(135deg, #55a3ff, #2e86de);
    }

    .animated-water-drop:nth-child(4n) {
        animation-delay: -6s;
        background: linear-gradient(135deg, #48cae4, #0077b6);
    }

    /* Animated virus particles */
    .animated-virus {
        position: absolute;
        width: 30px;
        height: 30px;
        background: radial-gradient(circle, #e74c3c, #c0392b);
        border-radius: 50%;
        animation: virusFloat 10s infinite ease-in-out;
        opacity: 0.5;
    }

    .animated-virus::before {
        content: '';
        position: absolute;
        width: 6px;
        height: 6px;
        background: #e74c3c;
        border-radius: 50%;
        top: -3px;
        left: 50%;
        transform: translateX(-50%);
        box-shadow:
            0 36px 0 #e74c3c,
            -15px 15px 0 #e74c3c,
            15px 15px 0 #e74c3c,
            -15px -15px 0 #e74c3c,
            15px -15px 0 #e74c3c;
    }

    .animated-virus:nth-child(3n) {
        background: radial-gradient(circle, #f39c12, #e67e22);
        animation-delay: -3s;
    }

    .animated-virus:nth-child(3n)::before {
        box-shadow:
            0 36px 0 #f39c12,
            -15px 15px 0 #f39c12,
            15px 15px 0 #f39c12,
            -15px -15px 0 #f39c12,
            15px -15px 0 #f39c12;
    }

    .animated-virus:nth-child(5n) {
        background: radial-gradient(circle, #9b59b6, #8e44ad);
        animation-delay: -5s;
    }

    .animated-virus:nth-child(5n)::before {
        box-shadow:
            0 36px 0 #9b59b6,
            -15px 15px 0 #9b59b6,
            15px 15px 0 #9b59b6,
            -15px -15px 0 #9b59b6,
            15px -15px 0 #9b59b6;
    }

    @keyframes waterFall {
        0% {
            top: -30px;
            opacity: 0;
        }

        10% {
            opacity: 0.6;
        }

        90% {
            opacity: 0.6;
        }

        100% {
            top: 100%;
            opacity: 0;
        }
    }

    @keyframes virusFloat {

        0%,
        100% {
            transform: translate(0, 0) rotate(0deg) scale(1);
        }

        25% {
            transform: translate(-20px, -30px) rotate(90deg) scale(1.1);
        }

        50% {
            transform: translate(30px, -20px) rotate(180deg) scale(0.9);
        }

        75% {
            transform: translate(-10px, 20px) rotate(270deg) scale(1.05);
        }
    }

    /* Important notice box */
    .important-notice {
        background: linear-gradient(135deg, #ff6b6b, #ee5a52);
        color: white;
        padding: 25px;
        border-radius: 15px;
        margin: 30px 0;
        text-align: center;
        animation: gentle-pulse 3s ease-in-out infinite;
    }

    .important-notice h4 {
        font-size: 1.4em;
        margin-bottom: 10px;
    }

    @keyframes gentle-pulse {

        0%,
        100% {
            transform: scale(1);
            box-shadow: 0 10px 30px rgba(255, 107, 107, 0.3);
        }

        50% {
            transform: scale(1.02);
            box-shadow: 0 15px 40px rgba(255, 107, 107, 0.4);
        }
    }

    /* Responsive design */
    @media (max-width: 768px) {
        .slide h1 {
            font-size: 2.5em;
        }

        .slide h2 {
            font-size: 2em;
        }

        .slide p {
            font-size: 1.2em;
        }

        .slide ul {
            font-size: 1.1em;
        }

        .content-card {
            padding: 25px;
        }

        .content-card h2 {
            font-size: 1.8em;
        }

        .floating-element {
            display: none;
        }
    }

    .page-header {
        margin-top: 50px;
    }

